{
  "name": "gl-Stream",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && npm run electron\"",
    "build": "vite build",
    "electron": "cross-env NODE_ENV=development electronmon . --watch src/main/index.js",
    "preview": "npm run build && cross-env NODE_ENV=production electron .",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "dist": "npm run build && electron-builder",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "pinia": "^3.0.1",
    "primeicons": "^7.0.0",
    "update-electron-app": "^3.1.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/publisher-github": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.22.0",
    "@tailwindcss/vite": "^4.1.7",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electronmon": "^2.0.3",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "globals": "^16.0.0",
    "prettier": "3.5.3",
    "tailwindcss": "^4.1.7",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourcompany.trygl",
    "productName": "GL Stream",
    "copyright": "Copyright Â© 2025",
    "files": [
      "dist/**",
      "src/main/**",
      "src/preload.js",
      "node_modules/**",
      "package.json"
    ],
    "extraResources": [],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GL Stream",
      "uninstallDisplayName": "GL Stream"
    }
  }
}